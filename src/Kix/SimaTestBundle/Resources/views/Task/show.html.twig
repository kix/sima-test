<h1>Task</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Addedon</th>
            <td>{{ entity.addedOn|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Completedon</th>
            <td>{{ entity.completedOn|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Dueon</th>
            <td>{{ entity.dueOn|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('task') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('task_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('task_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
